# Render Production Environment Variables
# Copy these to your Render dashboard Environment settings

APP_NAME=ShopEase
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

# Generate with: php artisan key:generate --show
APP_KEY=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

LOG_CHANNEL=stderr
LOG_LEVEL=error

# Database (Render PostgreSQL - use Internal Database URL)
DB_CONNECTION=pgsql
DATABASE_URL=
DB_SSLMODE=require

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file

# Mail Configuration (use a service like Mailgun, SendGrid, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Social Login (Google OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Social Login (Facebook OAuth)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

# Razorpay (if using payments)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
